
@{
    Layout = null;
}

@model List<LibreriaDAIR.Models.OfertaModelo>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LibreriaDAIR</title>
    <link rel="stylesheet" href="~/css/Estilos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <header>
            <img src="~/Imagenes/LogoDAIR.png" alt="Logo de la app" class="logo">
        </header>
        <main>
            <h2>Ofertas</h2>
            <div id="contenedorLibros">
                <div class="LibrosTarjetas">
                    @foreach (var oferta in Model)
                    {
                        <div class="tarjeta">
                            <a style="text-decoration: none;">
                                <img src="data:image/jpeg;base64,@oferta._Imagen" alt="@oferta._Titulo" />
                                <div class="informacion">
                                    <p>@oferta._Titulo</p>
                                    <p>Precio normal: ₡@oferta._Precio</p>
                                    <p>Ahora₡@oferta._PrecioDescuento</p>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
    <footer>
        <nav>
            <ul>
                <li><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                <li><a href="/Login/Index"><i class="fas fa-user"></i></a></li>
            </ul>
        </nav>
    </footer>
</body>
</html>
