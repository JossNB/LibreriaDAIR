<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realizar pago</title>
    <!-- Agregar Bootstrap desde un CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Agregar Font Awesome desde un CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/EstiloPasarela.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="payment-form">
                    <h2 class="text-center mb-4">Payments</h2>
                    <form action="/Carrito/RealizarPagoTarjeta" method="post">

                        <p>Total a pagar: <strong>₡@ViewBag.Total</strong></p>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Error
                            </div>
                        }

                        <!-- Número de tarjeta con ícono -->
                        <div class="mb-3 input-group">
                            <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                            <input type="text" class="form-control" id="numTarjeta" name="Numtarjeta" placeholder="Número de tarjeta" required maxlength="16">
                        </div>

                        <!-- Fecha de expiración con ícono -->
                        <div class="mb-3 input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input type="date" class="form-control" id="fechaVencimiento" name="Fechavencimiento" placeholder="MM/AA" required maxlength="5">
                        </div>

                        <!-- CVV con ícono de candado -->
                        <div class="mb-3 input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="text" class="form-control" id="cvv" name="Cvv" placeholder="CVV" required maxlength="3">
                        </div>

                        <!-- Identificación del usuario-->
                        <div class="mb-3">
                            <label for="idTitular" class="form-label">Identificación del titular</label>
                            <input type="text" class="form-control" id="idTitular" name="IdTitular" required>
                        </div>

                        <input type="hidden" name="MontoPago" value="@ViewBag.Total" />

                        <!-- Botón de pago -->
                        <button type="submit" class="btn btn-pagar">Pagar Ahora</button>
                        <br />
                        <br />
                        <a href="/Carrito/Index" class="custom-link">Cancelar compra</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Agregar los scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

